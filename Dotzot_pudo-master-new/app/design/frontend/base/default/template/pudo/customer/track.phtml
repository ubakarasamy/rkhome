<div class="track-your-order">
    <div class="page-title"><h1>Track Your Order</h1></div>
    <form method="post" action="">
    <input class="input-text required-entry" type="text" name="DOCKETNO" id="DOCKETNO" />
    <input type="button" class="input-btn" onclick="gettrack()" value="Track Your Order" title="Track Your Order" />
    </form>
    <div class="data"></div>
</div>
<script>
function gettrack(){
		var docno = jQuery("#DOCKETNO").val(); 
		if(docno == ''){jQuery('.data').html('<p style="color:red">Please Enter DOCATE No</p>');return false;}
		jQuery.ajax({ 
		 url: "<?php echo Mage::getBaseUrl()?>pudo/index/track", 
		data: "docno="+docno,
		beforeSend: function() {
		// setting a timeout
		jQuery('.data').html('Please Wait.....');
		},
		context: document.body
		}).done(function(response) {
		if(response)
		jQuery('.data').html(response);
		jQuery('#collect_loader').hide(); 
		});
	}
</script>
